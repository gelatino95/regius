    ITEM_ENERGY_POWDER
    ITEM_ENERGY_ROOT
    ITEM_HEAL_POWDER
    ITEM_REVIVAL_HERB
    ITEM_WHITE_HERB
    ITEM_MENTAL_HERB
    ITEM_CHARCOAL
    ITEM_SILVER_POWDER
}

