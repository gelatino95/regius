script KapokJungle_HerbShop_EventScript_Clerk {
    lock
    faceplayer
    message(format("Looking for medicinal herbs?"))
    waitmessage
    pokemart(KapokJungle_Mart_HerbShop)
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release
    end
}

