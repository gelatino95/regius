script AridIsland_EventScript_DrinkMart {
	lock
	message("The desert is hot!\nBeat the heat with a drink!")
	waitmessage
	pokemart(DrinkMartItems)
	msgbox("Come again soon!")
	release
}

mart DrinkMartItems {
	ITEM_BERRY_JUICE
	ITEM_FRESH_WATER
	ITEM_SODA_POP
	ITEM_LEMONADE
	ITEM_MOOMOO_MILK
}

