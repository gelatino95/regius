script GatewayIsland_EventScript_FlyingTaxi {
	lock
	faceplayer
	msgbox(format("Want a lift?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == 1)
	{
		setvar(VAR_0x800A, LAST_TALKED_TO_FLYING_TAXI)
		special(FieldLoadFlyMap)
	}
	release
	end
}